<script>
  var contentBlockHolder = {};
  contentBlockHolder.id = "{{ currentBlockIndex }}";
  contentBlockHolder.content = "{{ ContentBlockText }}";

  var contentBlockElement = "div[data-content-block='{{ currentBlockIndex }}']";
  var paragraphElement = "p";

  var contentBlockWrapper = document.querySelector(contentBlockElement);

  if (contentBlockWrapper) {
    var currentBlockID = contentBlockWrapper.dataset.contentBlock;
    var paragraphSelector = contentBlockWrapper.querySelector(paragraphElement);

    if (contentBlockHolder.id === currentBlockID && paragraphSelector) {
      var contentBlock = contentBlockHolder.content;
      paragraphSelector.innerHTML = `${contentBlock}`;
    }
  }
</script>
